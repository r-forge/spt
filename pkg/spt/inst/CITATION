citHeader("To cite package 'spt' in publications use:")
desc <- packageDescription("spt")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)
citEntry(entry="Manual",
title = "spt: S4 Classes and Methods for Spatiotemporal Data",
author = personList(as.person("J. Blair Christian")),
year = year,
note = vers,
textVersion =
paste("J. Blair Christian",
year,
"). spt: S4 Classes and Methods for Spatiotemporal Data. ",
vers, ".", sep=""))
